{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    "composite": true,
    "incremental": true
  },
  "exclude": [
    "cdk.out"
  ],
  "references": [
    {
      "path": "./layer/genericStuff/tsconfig.build.json"
    },
    {
      "path": "./lambda/getComment/tsconfig.build.json"
    },
    {
      "path": "./lambda/deleteComment/tsconfig.build.json"
    },
    {
      "path": "./lambda/listComments/tsconfig.build.json"
    }
  ]
}
